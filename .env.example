# .env.example - 本番環境用環境変数テンプレート
# 本番サーバーでの設定時は実際の値に変更してください

# !! 重要: セキュリティのため、機密情報は必ず実際の値に変更してください !!

# セキュリティ（必須変更）
SECRET_KEY=your-super-secret-key-here-min-32-characters-CHANGE-IN-PRODUCTION
DATABASE_URL=sqlite:///social_implementation_prod.db

# OpenAI API（必須設定）
OPENAI_API_KEY=your-actual-openai-api-key-here

# アプリ設定
FLASK_ENV=production
DEBUG=False

# データベース設定（PostgreSQL推奨）
# 本番環境ではPostgreSQLを推奨します
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=social_implementation_prod
DB_USER=app_user
DB_PASSWORD=secure_password_CHANGE_ME

# セッション設定
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/var/log/social-implementation/app.log

# SSL設定（本番環境推奨）
FORCE_HTTPS=True
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# セキュリティ設定
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# サーバー設定
SERVER_PORT=8000
SERVER_HOST=0.0.0.0

# バックアップ設定
BACKUP_DIR=/var/backups/social-implementation
AUTO_BACKUP_ENABLED=True

# 監視設定（オプション）
ENABLE_MONITORING=True
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# 外部サービス設定（必要に応じて）
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0

# メール設定（将来的な通知機能用）
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@example.com
# MAIL_PASSWORD=your-app-password