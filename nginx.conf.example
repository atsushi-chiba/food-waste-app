# Nginx設定ファイル（/etc/nginx/sites-available/social-implementation）
# 本番サーバーでの設置用テンプレート

server {
    listen 80;
    server_name your-domain.com;  # 実際のドメイン名に変更
    
    # HTTPSへのリダイレクト（SSL証明書設定後に有効化）
    # return 301 https://$server_name$request_uri;
}

server {
    # HTTPSの設定（SSL証明書を設定する場合）
    # listen 443 ssl http2;
    listen 80;  # テスト用（SSL証明書設定前）
    server_name your-domain.com;  # 実際のドメイン名に変更

    # SSL証明書の設定（Let's EncryptまたはSSL証明書設定時に有効化）
    # ssl_certificate /etc/letsencrypt/live/your-domain.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/your-domain.com/privkey.pem;
    # include /etc/letsencrypt/options-ssl-nginx.conf;
    # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # セキュリティヘッダー
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    # ログ設定
    access_log /var/log/nginx/social-implementation.access.log;
    error_log /var/log/nginx/social-implementation.error.log;

    # クライアントの設定
    client_max_body_size 64M;

    # 静的ファイルの配信
    location /static/ {
        alias /path/to/social-implementation/Static/;  # 実際のパスに変更
        expires 1y;
        add_header Cache-Control "public, immutable";
        
        # 静的ファイル用のセキュリティヘッダー
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # メインアプリケーション
    location / {
        proxy_pass http://127.0.0.1:8000;  # Gunicornが動作するポート
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # タイムアウト設定
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # バッファリング設定
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 4 256k;
        proxy_busy_buffers_size 256k;
    }

    # ヘルスチェック用エンドポイント
    location /health {
        proxy_pass http://127.0.0.1:8000/health;
        access_log off;
    }

    # robots.txt
    location = /robots.txt {
        alias /path/to/social-implementation/Static/robots.txt;  # robots.txtファイルを作成する場合
        log_not_found off;
        access_log off;
    }

    # favicon.ico
    location = /favicon.ico {
        alias /path/to/social-implementation/Static/favicon.ico;  # faviconファイルを作成する場合
        log_not_found off;
        access_log off;
    }

    # 不要なファイルへのアクセスをブロック
    location ~ /\. {
        deny all;
    }
    
    location ~ ~$ {
        deny all;
    }
}